<% for (product of products) { %>
  <div class="product-col-4 product-md-col-2 mb-48 mb-md-24 product-item">
    <a href="#" class="mb-12 mb-md-8 product-link">
      <img src="<%= product.imgPath %>" alt="<%= product.name %>" />
    </a>
    <h2 class="mb-4 mb-md-0"><%= product.name %></h2>
    <p>NT$<%= product.price %></p>
  </div>
<% } %>
